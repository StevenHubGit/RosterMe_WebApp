
@{
    //Set Layout
    Layout = "~/Views/Shared/_AboutLayout.cshtml";

    //Set tab title
    ViewData["Title"] = "About";
}

<!-- Start: About-Area -->
<section class="section-padding" id="about-area">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-5">
                <div class="page-title">
                    <h2 class="title wow fadeInUp">
                        What is RosterMe ?
                    </h2>
                    <div class="wow fadeInUp" data-wow-delay="0.5s">
                        <p style="font-size: 14px;">
                            RosterMe is a shift booking web application, it allows employees and managers to:
                            <ul style="list-style-type: circle;">
                                <li>Book shifts</li>
                                <li>View availabilities</li>
                                <li>View timesheets</li>
                                <li>View employees under the manager</li>
                                <li>Manage shifts, timesheets, availability and employees</li>
                                <li>Approve shifts</li>
                                <li>Invite employees</li>
                                <li>Send messages to manager</li>
                            </ul>
                            Anybody can view the prices for each services RosterMe provides.
                        </p>
                    </div>
                </div>
            </div>
            <div class="hidden-xs col-sm-6 col-md-offset-1">
                <img src="images/about-image.png" alt="">
            </div>
        </div>
    </div>
</section>
<!-- End: About-Area -->