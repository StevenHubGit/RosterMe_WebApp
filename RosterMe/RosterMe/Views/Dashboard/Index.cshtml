@model RosterMe.Models.Dashboard
<!-- model RosterMe.Models.Dashboard -->
@{
    //Display Home Layout
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    //Set tab title
    ViewData["Title"] = "Dashboard";

    //Store employee details as Model
    var employeeDetailsModel = ViewData["EmployeeDetails"];

    //
    String position = "";

    //
    if(employeeDetailsModel != null)
    {
        //
        position = employeeDetailsModel.GetType().ToString();
    }
    else
    {
        <p>
            No data in Employee Details Model
        </p>
    }
}

<!-- User Profile Section -->
<section class="section-padding" id="about-area">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-5">
                <div class="page-title">
                    <h2 class="title wow fadeInUp">
                        Your Details
                    </h2>
                    <div class="wow fadeInUp" data-wow-delay="0.5s">
                        <table class="userDetails" align="right">
                            <thead>
                                <tr>
                                    <th>
                                        Profile
                                    </th>
                                    <th>
                                        
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- #### User Details #### -->
                                <tr>
                                    <td>
                                        @position
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="hidden-xs col-sm-6 col-md-offset-1">
                <img src="images/about-image.png" alt="">
            </div>
        </div>
    </div>
</section>
<!-- End: User Profile Section -->
