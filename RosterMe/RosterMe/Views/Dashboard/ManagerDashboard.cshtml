                    url: urlToAction + "?empId=" + empId,

                    //Pass employee ID in data
                    data: empId,
                    //data: '{EmployeeID: ' + inputEmployeeID + '}',
                    //dataType: 'json',

                    //Set content type
                    contentType: "application/json; charset=utf-8",

                    //Set method type
                    type: 'POST',

                    //Define what type to accept
                    accepts: "application/json",

                    //Set action on succes
                    success: function (data)
                    {
