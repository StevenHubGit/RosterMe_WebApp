@model RosterMe.Models.Dashboard
<!-- model RosterMe.Models.Dashboard -->
@{
    //Display Home Layout
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    //Set tab title
    ViewData["Title"] = "Dashboard";

    //Store employee details as Model
    List<RosterMe.Models.Entities.Employee> employeeDetailsModel = 
        (List<RosterMe.Models.Entities.Employee>) ViewData["EmployeeDetails"];
    
    //Store employee booked shifts as Model
    List<RosterMe.Models.Entities.BookedShifts> employeeBookedShifts =
        (List<RosterMe.Models.Entities.BookedShifts>) ViewData["EmployeeBookedShifts"];
    
    //Store employee availabilities as Model
    List<RosterMe.Models.Entities.Availability> employeeAvailabilities =
        (List<RosterMe.Models.Entities.Availability>) ViewData["EmployeeAvailabilities"];

    //
    String position = "";

    //
    if (employeeDetailsModel != null)
    {
        /*
        <p>
            There are data in Employee Details model
            @for(int i = 0; i < employeeDetailsModel.Count; i++)
            {
                @employeeDetailsModel[i].FirstName
            }
        </p>
        */
    }
    else
    {
        <p>
            No data in Employee Details Model
        </p>
    }
}

<!-- #### User Details #### -->
<partial name="~/Views/PartialViews/_UserProfileLayout.cshtml"/>

<!-- ##### Employees Under Manager Sections #### -->
<section class="section-padding gray-bg">
    <div class="row">
        <!-- #### Section: Employees' Booked Shifts #### -->
        <div id="dashColumn" style="margin: 8px 15px 8px 15px;">
            <h2>
                Confirmed Bookings
            </h2>
            <table class="managerEmployeesDataTable" style="padding: 8px 15px 8px 15px; width: 350px;">
                <thead class="">
                    <tr>
                        <th>
                            Employees
                        </th>
                        <th>
                            Shift
                        </th>
                    </tr>
                </thead>
                <tbody class="">
                    @for(int i = 0; i < employeeBookedShifts.Count(); i++)
                    {
                        <tr>
                            <td style="padding: 3px 8px 3px 3px;">
                                @employeeBookedShifts[i].Employee.FirstName 
                                @employeeBookedShifts[i].Employee.LastName
                            </td>
                            <td style="padding: 3px 8px 3px 3px;">
                                @employeeBookedShifts[i].BookedTime.ToString("dd/MM/yyyy hh:mm tt")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- #### Section: Employees' Availabilities #### -->
        <div id="dashColumn" style="margin: 8px 15px 8px 15px;">
            <h2>
                Week's Availabilities
            </h2>
            <form>
                <table class="managerEmployeesDataTable" id="employeeInvitation" 
                       style="padding: 8px 15px 8px 15px; width: 500px;">
                    <thead class="">
                        <tr>
                            <th>
                                Employees
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Available Date
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody class="">
                        @for (int i = 0; i < employeeAvailabilities.Count(); i++)
                        {
                            <tr>
                                <td style="padding: 3px 8px 3px 3px;">
                                    @employeeAvailabilities[i].Employee.FirstName 
                                    @employeeAvailabilities[i].Employee.LastName
                                </td>
                                <td style="padding: 3px 8px 3px 3px;">
                                    <input type="date" name="EmployeeInviteDate" placeholder="09:30"/>
                                </td>
                                <td style="padding: 3px 8px 3px 3px;">
                                    @employeeAvailabilities[i].AvailableDate.ToString("dd/MM/yyyy")
                                </td>
                                <td style="padding: 3px 8px 3px 3px;">
                                    <input type="button" name="InviteEmployeeButton"
                                           value="Invite"
                                           class="inviteEmployee"
                                           onclick="EmployeeInvitation
                                            (@employeeAvailabilities[i].EmployeeId, event);"/>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</section>
<!-- End: Shifts -->