<!-- #### User Details #### -->
<partial name="~/Views/PartialViews/_UserProfileLayout.cshtml"/>

<!-- ##### Employees Under Manager Sections #### -->
<section class="section-padding gray-bg">
    <div class="row">
        <!-- #### Section: Employees' Booked Shifts #### -->
        <div id="column">
            <h2>
                Confirmed Bookings
            </h2>
            <table class="managerEmployeesDataTable">
                <thead class="">
                    <tr>
                        <th>
                            Employees
                        </th>
                        <th>
                            Shift
                        </th>
                    </tr>
                </thead>
                <tbody class="">
                    @for(int i = 0; i < employeeBookedShifts.Count(); i++)
                    {
                        <tr>
                            <td>
                                @employeeBookedShifts[i].Employee.FirstName 
                                @employeeBookedShifts[i].Employee.LastName
                            </td>
                            <td>
                                @employeeBookedShifts[i].BookedTime
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- #### Section: Employees' Availabilities #### -->
        <div id="column">
            <h2>
                Week's Availabilities
            </h2>
            <form asp-action="InviteEmployeeToShift" asp-controller="Dashboard">
                <table class="managerEmployeesDataTable" id="employeeInvitation">
                    <thead class="">
                        <tr>
                            <th>
                                Employees
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Available Date
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody class="">
                        @for (int i = 0; i < employeeAvailabilities.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @employeeAvailabilities[i].Employee.FirstName 
                                    @employeeAvailabilities[i].Employee.LastName
                                </td>
                                <td>
                                    <input type="time" name="EmployeeInviteDate"/>
                                </td>
                                <td>
                                    @employeeAvailabilities[i].AvailableDate
                                </td>
                                <td>
                                    <input type="submit" name="InviteEmployeeButton"
                                           value="Invite"
                                           class="inviteEmployee"
                                           onclick="EmployeeInvitation(@employeeAvailabilities[i].EmployeeId)"/>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</section>
<!-- End: Shifts -->
<script type="text/javascript">
