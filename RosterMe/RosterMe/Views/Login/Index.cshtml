@model Polynesians.Models.Entities.Login
@{
    //Display Login Layout
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    //Set View
    ViewData["Title"] = "Login";
}

<!-- HTML content -->
<h2 class="loginTitle"> Welcome please login to access your session </h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Login" asp-action="LoginUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Username" />

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!--
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" class="loginRememberMe"/>
                        Remember Me
                        Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            -->

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Login
                </button>
            </div>
        </form>
    </div>
</div>